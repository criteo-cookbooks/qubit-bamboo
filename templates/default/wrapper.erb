#!/bin/bash
# This file is generated by Chef

<%- if @syslog -%>
# stdout and stderr to syslog
exec 1> >(exec logger -p user.info -t "bamboo")
exec 2> >(exec logger -p user.err  -t "bamboo")
<%- end -%>

# bamboo binary configuration
exec <%= @bin %> \
<%- @flags.sort.each do |flag, value| -%>
  <%= "-#{flag}=\"#{value}\""%> \
<%- end -%>
